page {
  background-color: #0000;
  height: 80%;
  font-size: 32rpx;
  line-height: 1.6;
}

page.body {
  height: 80%;
  font-size: 32rpx;
}

.watermark {
  position: relative;
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  margin-top: 0%;
  z-index: 9;
}



.watermark-input {
  /*position: absolute;*/
  margin-top: 5rpx;
  left: 50%;
  width: 664rpx;
  height: 108rpx;
  margin-left: 50rpx;
  z-index: 9;
  background-color: #fff;
  box-shadow: 0 12rpx 28rpx rgba(153, 153, 153, 0.34);
  border-radius: 16rpx;
}

.watermark-input input {
  float: left;
  width: 80%;
  height: 100%;
  font-size: 28rpx;
  padding-left: 30rpx;
}

.parsing {
  padding-top: 0%;
  margin-top: 20rpx;
  overflow: hidden;
  display: block;
  width: 664rpx;
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
  background-color: #249424;
  box-shadow: 0 14rpx 28rpx rgba(51, 122, 255, 0.3);
}

button {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
}


.txt.tips {
  color: darkgrey;
  font-size: 10px;
  display: flex;
  flex-direction: column;
  text-align: center;
}

/* 粘贴链接的样式 */
.pasteUrl {
  color: blue;
  text-align: right;
  margin-right: 40rpx;
}

.container-top {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.left {
  position: relative;
  padding-left: 20rpx;
  text-align: left;
  margin-left: 60rpx;
}

.left::after {
  position: absolute;
  top: 50%;
  transform: translatey(-40%);
  left: 0;
  content: '';
  width: 6rpx;
  height: 25rpx;
  background-color: #2EB976;
}

/* 清除按钮的样式 */
.watermark-input image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
}

.top-title {
  text-align: center;
  margin-top: 20rpx;
  font-size: 24rpx;
  font-weight: bolder;
  color: rgb(153, 26, 26);
}

/* 顶部部分 */
.top {
  width: 100%;
  height: 90rpx;
  text-align: center;
  background-color: #FFFFFF;
}

.help-area {
  margin: 10px;
  /* padding: 10px; */
  /* background-color: white;
  border-radius: 2%; */
}

.help-area .btn {
  margin: 10px 5px;
}

.help-area .share-btn {
  color: red;
}

.help-area .btn-2 {
  display: flex;
  justify-content: space-around;
  text-align: center;
}


.top p {
  display: inline-block;
  width: 180rpx;
  line-height: 90rpx;
  text-align: center;
  margin: 0 10rpx;
}

.top p.selected {
  border-bottom: 2px solid blue;
}


.bottom-tip-left {
  display: flex;
  padding: 20rpx;
  width: 300rpx;
  text-align: center;
  margin-left: 30rpx;
  margin-right: 30rpx;
  color: #fff;
  background: -webkit-linear-gradient(right, #9536FF, #BF69FF);
  box-shadow: 0 12rpx 28rpx rgba(153, 153, 153, 0.34);
  border-radius: 16rpx;
}

.bottom-share {
  padding: 20rpx;
  color: #fff;
  background: -webkit-linear-gradient(right, #BF69FF, #FF6C42);
  box-shadow: 0 12rpx 28rpx rgba(153, 153, 153, 0.34);
  border-radius: 16rpx;
}

.bottom-tip-right {
  display: flex;
  padding: 20rpx;
  width: 300rpx;
  text-align: center;
  margin-left: 30rpx;
  margin-right: 30rpx;
  color: #fff;
  background: -webkit-linear-gradient(right, #75AEFF, #2D8DFF);
  box-shadow: 0 12rpx 28rpx rgba(153, 153, 153, 0.34);
  border-radius: 16rpx;
}